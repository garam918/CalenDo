<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.onboarding.OnboardingSecondFragment">

        <ImageView
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/onboarding_todo_calendo_img"
            android:id="@+id/onboarding_second_calendo_img"
            android:layout_width="120dp"
            android:layout_height="350dp"/>

        <TextView
            android:text="할일"
            android:textAppearance="@style/onboarding_title_text_style"

            android:id="@+id/onboarding_second_title_text"
            android:layout_marginStart="28dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="이번 달 목표부터,\n오늘의 할 일까지 정리해보세요!"
            android:textAppearance="@style/onboarding_explain_text_style"

            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"
            android:id="@+id/onboarding_second_explain_text"
            app:layout_constraintTop_toBottomOf="@id/onboarding_second_title_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="-40dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/onboarding_second_calendo_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/onboarding_todo_img"
            android:id="@+id/onboarding_second_todo_img"
            android:layout_width="wrap_content"
            android:layout_height="285dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
