<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.onboarding.OnboardingThirdFragment">

        <ImageView
            android:src="@drawable/onboarding_plan_calendo_img"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/onboarding_plan_calendo_img"
            android:layout_width="120dp"
            android:layout_height="350dp"/>

        <TextView
            android:id="@+id/onboarding_third_title_text"
            android:text="일정"
            android:textAppearance="@style/onboarding_title_text_style"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="중요한 일정은 미리 등록하고\n놓치지 마세요"
            android:textAppearance="@style/onboarding_explain_text_style"
            android:gravity="end"
            android:id="@+id/onboarding_third_explain_text"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toBottomOf="@id/onboarding_third_title_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="-50dp"
            app:layout_constraintTop_toBottomOf="@id/onboarding_plan_calendo_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/onboarding_plan_img"
            android:id="@+id/onboarding_plan_img"
            android:layout_width="wrap_content"
            android:layout_height="260dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>